<div class="container">

  <h1>Add a new restaurant</h1>
 <hr>
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: %w(chinese italian japanese french belgian)  %>
    <%= f.submit "Submit Restaurant", class: "btn btn-primary" %>
  <% end %>
  <hr>
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
</div>
